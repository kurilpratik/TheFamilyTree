<div class="form-row">
  <div class="form-area">
    <form
      name="contact-adults"
      method="post"
      action="https://api.web3forms.com/submit"
      method="POST"
      data-astro-reload
    >
      <h3>Enquiry for an adult's appointment</h3>

      <!-- Replace with your Access Key -->
      <input type="hidden" name="access_key" value="b1002d9f-13a0-469e-b80f-d5441db2a328" />
      <input type="hidden" name="subject" value="New lead from Adults page" />
      <input type="hidden" name="from_name" value="Adults Contact Form" />

      <input
        type="text"
        name="name"
        id="name"
        placeholder="Your Full Name"
        required
        class="full-length"
      />
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Your Email Address"
        required
        class="full-length"
      />

      <fieldset>
        <div class="one-row">
          <div class="checkbox-container">
            <label class="checkbox"
              >Appointment
              <input type="checkbox" name="options" checked="checked" value="Appointment" />
              <span class="checkmark"></span>
            </label>
          </div>

          <div class="checkbox-container">
            <label class="checkbox"
              >Training/Seminar
              <input type="checkbox" name="options" value="Training/Seminar" />
              <span class="checkmark"></span>
            </label>
          </div>
        </div>

        <div class="checkbox-container">
          <label class="checkbox"
            >ISTDP
            <input type="checkbox" name="options" value="istdp" />
            <span class="checkmark"></span>
          </label>
        </div>
      </fieldset>

      <textarea name="message" id="message" cols="30" rows="6" placeholder="Your Message" required
      ></textarea>

      <!-- Honeypot Spam Protection -->
      <input type="checkbox" name="botcheck" class="hidden" style="display: none;" />

      <!-- Custom Confirmation / Success Page -->
      <input type="hidden" name="redirect" value="https://thefamilytree.in/success-adults" />
      <button type="submit" class="btn-primary">Send Enquiry</button>
    </form>
  </div>
</div>
